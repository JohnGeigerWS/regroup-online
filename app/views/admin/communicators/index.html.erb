<div class="panel">
  <div class="clearfix">
      <h1 class="float-left">Communicators</h1>
      <%= link_to 'New Communicator', new_admin_communicator_path, class: "button float-right" %>
  </div>

  <table class="sortable-table responsive">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @communicators.each do |communicator| %>
        <tr>
          <td><%= communicator.name %></td>
          <td>
            <div class="float-right">
              <%= link_to '<i class="fi-pencil tooltips" data-original-title="Edit Communicator" title="Edit Communicator"></i>'.html_safe, edit_admin_communicator_path(communicator), class: "action-button edit" %>
              <%= link_to '<i class="fi-trash tooltips" data-original-title="Delete Communicator" title="Delete Communicator"></i>'.html_safe, admin_communicator_path(communicator), method: :delete, data: { confirm: 'Are you sure?' }, class: "action-button delete" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
