<div class="nested-fields row presenter-select">
    <div class="small-11 columns">
      <div class="callout asset-callout">

        <%= f.label :kind %>
        <%= f.collection_select(:kind, Asset.kinds.map{ |dp| [dp.first, dp.first.humanize] }, :first, :second, {:prompt => "Select an asset type"}) %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :label %>
        <%= f.text_field :label %>

        <%= f.label :value %>
        <%= f.text_area :value %>
      </div>
    </div>
    <div class="small-1 column">
      <%= link_to_remove_association "<span class='fi-minus' />".html_safe, f %>
    </div>
</div>
