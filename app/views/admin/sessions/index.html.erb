<div class="panel">
  <div class="clearfix">
      <h1 class="float-left">Sessions</h1>
      <%= link_to 'New Session', new_admin_session_path, class: "button float-right" %>
  </div>

  <table class="sortable-table responsive">
    <thead>
      <tr>
        <th>Title</th>
        <th>Permalink</th>
        <th>Timeslot</th>
        <th>Finished</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sessions.each do |session| %>
        <tr>
          <td><%= session.title %></td>
          <td><%= session.permalink %></td>
          <td><%= session.timeslot.name %></td>
          <td><%= readable_boolean(session.finished?) %></td>
          <td>
            <div class="float-right">
              <%= link_to '<i class="fi-pencil tooltips" data-original-title="Edit Session" title="Edit Session"></i>'.html_safe, edit_admin_session_path(session), class: "action-button edit" %>
              <%= link_to '<i class="fi-trash tooltips" data-original-title="Delete Session" title="Delete Session"></i>'.html_safe, admin_session_path(session), method: :delete, data: { confirm: 'Are you sure?' }, class: "action-button delete" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
