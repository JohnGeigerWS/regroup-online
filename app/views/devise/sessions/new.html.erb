<div class="row">
  <div class="small-12 medium-6 columns medium-centered">
    <div class='drive-panel login-nudge-down'>
      <div class="drive-panel-title">
        Sign in to Drive Online
      </div>

      <div class="drive-panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, autofocus: true %>

          <%= f.label :password, "Password" %>
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.submit "LOG IN", class: 'button expanded' %>

          <div class="row">
            <div class="small-6 columns">
              <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Remember Me" %>
              </div>
              <% end -%>
            </div>
            <div class="small-6 columns clearfix">
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "float-right" %><br />
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">

  <div class="small-12 medium-6 medium-centered columns">
    <h4 class='fancy-or'>&ndash;&nbsp;OR&nbsp;&ndash;</h4>
    <div class="drive-panel signup-container">
      <div class="drive-panel-body">
        <h4>Not signed up yet?</h4>
        <div class='row more-options'>
          <div class="small-6 columns">
            <a href="http://driveconference.com" class="button expanded">LEARN MORE</a>
          </div>
          <div class="small-6 columns">
            <a href="https://www.eventbrite.com/e/drive-online-2017-tickets-31259308433" class="button expanded" target="_blank">REGISTER</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
