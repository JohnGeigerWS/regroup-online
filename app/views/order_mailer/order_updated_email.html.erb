<% content_for :content do %>
  <tr>
    <td class="container-padding content" style="font-family:Helvetica, Arial, sans-serif;font-size:16px;line-height:16px;padding-left:42px;padding-right:42px;padding-top:50px;padding-bottom:40px;background-color:#ffffff; color:#666;">
      <table>
        <tr>
          <td align="left" style="font-size: 26px;color:#7D7D7D; padding-bottom:24px; font-weight:200;">
            Hello <%= @user.first_name %>,
          </td>
        </tr>
      </table>

      <table>
        <tr>
          <td style="font-family:Helvetica, Arial, sans-serif;font-size: 18px;line-height: 24px;color: #7D7D7D; padding-bottom:12px;">
            Your <%= ENV['SITE_NAME'] %> 2017 order has been updated.
            You now have <%= @user.invitation_limit + 1 %> tickets!
          </td>
        </tr>
      </table>

      <table>
        <tr>
          <td style="font-family:Helvetica, Arial, sans-serif;font-size: 18px;line-height: 24px;color: #7D7D7D;">
            You can manage your purchased tickets by signing in to your account below.
          </td>
        </tr>
      </table>

      <table>
        <tr>
          <td align="center" style="width:600px;padding-top:50px;padding-bottom:50px;">
            <%= render partial: 'devise/mailer/call_to_action_button', locals: { link: account_url, text: 'Your Account' } %>
          </td>
        </tr>
      </table>


      <table>
        <tr>
          <td style="font-family:Helvetica, Arial, sans-serif;font-size:18px;line-height:24px;color:#7D7D7D;">
            Thanks,
          </td>
        </tr>
        <tr>
          <td style="font-family:Helvetica, Arial, sans-serif;font-size:18px;line-height:24px;color:#7D7D7D;margin-bottom:10px;">
            The <%= ENV['SITE_NAME'] %> Team
          </td>
        </tr>
      </table>
    </td>
  </tr>

<% end %>
<%= render template: "devise/mailer/layout" %>
