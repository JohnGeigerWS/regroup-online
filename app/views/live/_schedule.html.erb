<% @schedule.each do |day, timeslots| %>
  <div class="content active">
    <h2 class="schedule-day"><%= day %> SCHEDULE</h2>

    <% timeslots.each do |timeslot| %>
      <div class="session-block" id="timeslot-<%= timeslot.id %>">
        <div class="row">
          <div class="small-12 medium-3 large-2 columns">
            <h4 class="time"><%= format_time_window(timeslot) %></h4>
          </div>

          <div class="session-container small-12 medium-9 large-10 columns">
            <div class="clearfix">
              <h4 class="session-block-title"><%= timeslot.name %></h4>

              <% if @live_state[:live][:timeslot] && @live_state[:live][:timeslot]["id"] == timeslot.id %>
                <p class="on-air label">ON AIR NOW!</p>
              <% end %>
            </div>

            <% timeslot.sessions.each do |session| %>
              <div class="session row">
                <div class="small-12 columns">
                  <h5 class="session-title"><%= session.title %></h5>

                  <div class="row">
                    <div class="small-12 large-9 columns">
                      <p><%= session.description %></p>
                    </div>
                    <div class="small-12 large-3 columns">
                      <%= session_button_markup(session) %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
